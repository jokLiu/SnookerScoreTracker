<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table">


    <TextView
        android:id="@+id/score_tm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/p1_t1_image"
        android:layout_alignStart="@+id/brown"
        android:background="@null"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score_tm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/p3_t2_image"
        android:layout_alignEnd="@+id/pink"
        android:background="@null"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/p4_t2_image"
        android:layout_below="@+id/p4_t2_image"
        android:background="@null"
        android:text="Player 4"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/player2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/p2_t1_image"
        android:layout_below="@+id/p2_t1_image"
        android:background="@null"
        android:text="Player 2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/p4_t2_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/score2_tm1"
        android:layout_alignStart="@+id/player3_name"
        android:background="@null"
        app:srcCompat="@drawable/p1" />

    <TextView
        android:id="@+id/player1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/p1_t1_image"
        android:layout_marginTop="230dp"
        android:background="@null"
        android:text="Player 1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/player3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player1_name"
        android:layout_alignBottom="@+id/player1_name"
        android:layout_alignStart="@+id/p3_t2_image"
        android:background="@null"
        android:text="Player 3"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/red"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/score2_tm1"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/brown"
        android:background="@drawable/red1"
        android:onClick="onClick"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/red"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/green"
        android:background="@drawable/yellow1"
        android:onClick="onClick"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/green"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/pink"
        android:layout_alignStart="@+id/button_next_player"
        android:background="@drawable/green1"
        android:onClick="onClick"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/brown"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/yellow"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/blue"
        android:background="@drawable/brown1"
        android:onClick="onClick"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/blue"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/yellow"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue1"
        android:onClick="onClick"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pink"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/button_next_player"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/blue"
        android:background="@drawable/pink1"
        android:onClick="onClick"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/black"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/brown"
        android:layout_toLeftOf="@+id/button_foul"
        android:layout_marginRight="10dp"
        android:background="@drawable/black1"
        android:onClick="onClick"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_foul"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/yellow"
        android:layout_below="@+id/brown"
        android:background="@drawable/white1"
        android:onClick="onClick"
        android:text="Foul"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button_next_player"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/pink"
        android:layout_below="@+id/blue"
        android:layout_marginEnd="36dp"
        android:background="@drawable/white1"
        android:text="Next"
        android:onClick="onClick"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/button_frame_end"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/score3_tm2"
        android:layout_below="@+id/pink"
        android:background="@drawable/white1"
        android:text="End"
        android:onClick="onClick"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold|italic"/>

    <ImageView
        android:id="@+id/p1_t1_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/brown"
        android:layout_alignTop="@+id/p3_t2_image"
        android:layout_marginEnd="14dp"
        android:background="@null"
        app:srcCompat="@drawable/p1" />

    <ImageView
        android:id="@+id/p3_t2_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/player3_name"
        android:layout_alignStart="@+id/pink"
        android:layout_marginStart="11dp"
        android:background="@null"
        app:srcCompat="@drawable/p2" />

    <ImageView
        android:id="@+id/p2_t1_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/score2_tm1"
        android:layout_below="@+id/player1_name"
        android:layout_marginTop="11dp"
        android:background="@null"
        app:srcCompat="@drawable/p2" />

    <TextView
        android:id="@+id/score2_tm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p2_t1_image"
        android:layout_alignEnd="@+id/score1_tm1"
        android:background="@null"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score4_tm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p4_t2_image"
        android:layout_alignEnd="@+id/p4_t2_image"
        android:background="@null"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score1_tm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p1_t1_image"
        android:layout_alignEnd="@+id/p1_t1_image"
        android:background="@null"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score3_tm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p3_t2_image"
        android:layout_alignEnd="@+id/p3_t2_image"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@null"/>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/p1_t1_image"
        android:layout_marginTop="43dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/team1" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/score3_tm2"
        android:layout_alignTop="@+id/imageView15"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/team2" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="150dp"
        android:layout_height="340dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/stick" />

</RelativeLayout>